<h1>New Game</h1>
<ul>
  <% given_grid = ""%>
  <% @grid.each do |letter| %>
    <% given_grid += letter%>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input name="grid" type="hidden" value="<%= given_grid %>"/>
  <label>What is the longest word you can find?</label>
  <input type="text" name="word">
  <input type="submit" value="Play">
</form>

